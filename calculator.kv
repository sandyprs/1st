<Custbut@Button>:
    font_size: 32

<calculayout>:
    id: calculator
    dis: entry
    rows: 6
    padding: 10
    spacing: 10

    BoxLayout:
        TextInput:
            id: entry
            font_size: 32
            multiline: False

    BoxLayout:
        spacing: 10
        Custbut:
            text: "7"
            on_press: entry.text+=self.text

        Custbut:
            text: "8"
            on_press: entry.text+=self.text
        Custbut:
            text: "9"
            on_press: entry.text+=self.text
        Custbut:
            text: "+"
            on_press: entry.text+=self.text

    BoxLayout:
        spacing: 10
        Custbut:
            text: "4"
            on_press: entry.text+=self.text

        Custbut:
            text: "5"
            on_press: entry.text+=self.text
        Custbut:
            text: "6"
            on_press: entry.text+=self.text
        Custbut:
            text: "-"
            on_press: entry.text+=self.text

    BoxLayout:
        spacing: 10
        Custbut:
            text: "1"
            on_press: entry.text+=self.text

        Custbut:
            text: "2"
            on_press: entry.text+=self.text
        Custbut:
            text: "3"
            on_press: entry.text+=self.text
        Custbut:
            text: "x"
            on_press: entry.text+=self.text

    BoxLayout:
        spacing: 10
        Custbut:
            text: "("
            on_press: entry.text+=self.text

        Custbut:
            text: ")"
            on_press: entry.text+=self.text
        Custbut:
            text: "."
            on_press: entry.text+=self.text
        Custbut:
            text: "rt"
            on_press: entry.text+="sqrt"



    BoxLayout:
        spacing: 10
        Custbut:
            text: "AC"
            on_press: entry.text=""

        Custbut:
            text: "0"
            on_press: entry.text+=self.text
        Custbut:
            text: "="
            on_press: calculator.calculate(entry.text)
        Custbut:
            text: "/"
            on_press: entry.text+=self.text

